<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_button_1">

    <ImageView
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_success_emoticon"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tvDialogSuccessTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/caviar_dreams_bold"
        android:gravity="center"
        android:text="@string/dialog_input_success_title_text"
        android:textColor="@color/colorBlack"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/tvDialogSuccessBody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/caviar_dreams_regular"
        android:gravity="center"
        android:text="@string/dialog_input_success_body_text"
        android:textColor="@color/colorBlack"
        android:textSize="16sp"/>

</LinearLayout>